<%-include('partials/header.ejs')%>

    <% if (questions && questions.length > 0){ %>
   

	<!--	<div class = "container-fluid h-100 text-center">-->
		<div class = "row top5">
			<h1>Question</h1>
      <% questions.forEach(function(result){%>
        <div class = "col-lg-12 col-md-12 my-auto text-center border border-primary">
          <span class = "border">
			<h4>Qid: <%=result.Qid%></h4>
			<h4>Username: <%=result.username%></h4>
			  <h4>title: <%=result.title%></h4> 
			  <h4>body: <%=result.body%></h4> 
			  <h4>Topic: <%=result.topic_name%></h4> 
			  <h4>Subtopic: <%=result.subtopic_name%></h4>
			  <h4>Date Posted: <%=result.date_posted%></h4>
			  <h4>Time Posted: <%=result.time_posted%></h4>
			  <h4>Resolved: <%=result.resolved%></h4>

		<%if (loggedIn){%>
        	<a href="/giveanswer/<%=result.Qid%>">Click to Give Answer</a>
			<%if (currUser == result.username && result.resolved != 1){%>
				<form action="/markasresolved" method="post">
					<button name="qid" value="<%=result.Qid%>">Mark As Resolved</button>
				</form>
			<%}%>
		<%}else{%>
			<a href="/login">Login to Answer!</a>
          
		<%}%>
	</span>
        </div>

        

     <%})}%>
    </div>

    <% if (answers && answers.length > 0){ %>
   

	<!--	<div class = "container-fluid h-100 text-center">-->
		
		<div class = "row top5">
			<h1>Answers</h1>
      <% answers.forEach(function(result){%>
        <div class = "col-lg-12 col-md-12 my-auto text-center border border-primary">
          <span class = "border">
          <h4>Qid: <%=result.Qid%></h4>
		  <h4>Aid: <%=result.Aid%></h4>
		  <h4>username: <%=result.username%></h4>
		 	<h4>body: <%=result.body%></h4>
			<h4>num_likes: <%=result.num_likes%></h4>  
		  <h4>Date Posted: <%=result.date_posted%></h4>
		  <h4>Time Posted: <%=result.time_posted%></h4>
         <!-- <button href="/<%=result.Qid%>" type="button" class = "btn btn-primary">Click to See</button>-->

			<%if (loggedIn){%>
				<form action="/addlike" method ="post">

					<input type="text" name="aid" id="aid" value="<%=result.Aid%>" hidden>
					<button type="submit" value="Login">like</button>
				</form>
			<%}%>
          </span>
        </div>
        

     <%})}else{%>
          <h1>no answers!! </h1>
		  <%if (loggedIn){%>
		  <h1>give an answer!</h1>
		  <%}%>
      <%}%>

 

    

    

